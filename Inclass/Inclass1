#Inclass-1
#1  Define and Print Variables
name = "Jayanth"
age = 24
is_student = True
print(f"My name is {name}, I am {age} years old, and student status: {is_student}.")

#2 User Input and Data Conversion
num1= int(input("enter the first number:"))
num2=int(input("enter the second number:"))

result= int(num1+num2)

print(f"The sum of two numbers is: {result}")

#3 Identify Data types
integer_var = 10
bool_var = False
decimal_var = 4.44
string_var = 'python'

print("The type of integer_var is:", type(integer_var))
print("The type of bool_var is:", type(bool_var))
print("The type of decimal_var is:", type(decimal_var))
print("The type of string_var is:", type(string_var))


#4 Perform Arithmetic Operations
x=10
y=6
print(x+y)
print(x-y)
print(x%y)
print(x*y)

#5 Conditional Logic
num = int(input("Enter a number: "))
if num > 0:
    print("Positive")
elif num < 0:
    print("Negative")
else:
    print("Zero")

#6 Even or Odd
num = int(input("Enter a number:"))
if num % 2 ==0:
   print("Even")
else:
   print("odd")

#7 For Loop with Range
for i in range(1, 6):
    print(f"Iteration {i}")

#8 Factorial with While Loop
def factorial(n):
    result = 1
    for i in range(1, n + 1):
        result *= i
    return result

print(factorial(4))

#9 Function to Add Numbers
def add_numbers(x, y):
    return x + y  
result = add_numbers(6, 10)
print("The sum is:", result)

#10  Function with Default Arguments
def greet(name="Guest"):
    return (f"Hello, {name}! Welcome!")

message1 = greet("Jayanth")  
message2 = greet()         

print(message1)
print(message2)
